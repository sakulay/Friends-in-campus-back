<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youlai.boot.app.mapper.AppPostMapper">

    <!-- 获取图文内容分页列表 -->
    <select id="getAppPostPage" resultType="com.youlai.boot.app.model.vo.AppPostVO">
        SELECT
        p.id,
        p.user_id,
        p.title,
        p.content,
        p.like_count,
        p.comment_count,
        p.create_time,
        p.update_time,
        p.status
        FROM
        app_post p
        <where>
            p.is_deleted = 0
        </where>
    </select>

</mapper>
